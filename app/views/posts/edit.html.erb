<%= form_with(model: @post, local: true) do |form| %>

    <div class="title">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
  
    <div class="time">
      <%= form.label :start_time %>
      <%= form.datetime_select :start_time %>
      <%= form.label :end_time %>
      <%= form.datetime_select :end_time %>
    </div>
    
    <div class="body">
      <%= form.label :body %>
      <%= form.text_field :body %>
    </div>
  
    <div class="submit">
      <%= form.submit %>
    </div>
  
<% end %>